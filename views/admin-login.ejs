<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login - Bluesense</title>
    <style>
      body {
        background: #f5f5f5;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .header {
        font-size: 1.5em;
        background: #007bff;
        color: #fff;
        padding: 10px;
        text-align: center;
      }
      .form {
        max-width: 400px;
        margin: 20px auto;
        padding: 16px;
        background: #ffffff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .form h1 {
        color: #007bff;
        font-size: 24px;
        text-align: center;
        margin-bottom: 20px;
      }
      .form input[type="email"],
      .form input[type="password"] {
        box-sizing: border-box;
        width: 100%;
        margin-bottom: 10px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .form button {
        box-sizing: border-box;
        width: 100%;
        padding: 10px;
        background: #007bff;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        color: #fff;
        cursor: pointer;
      }
      .form button:hover {
        background: #0056b3;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <h2>Bluesense Admin Page</h2>
    </div>

    <div id="adminLogin" class="page">
      <div class="form">
        <h1>Admin Login</h1>
        <input
          type="email"
          id="adminEmail"
          name="adminEmail"
          placeholder="Email"
          required
        />
        <input
          type="password"
          id="adminPassword"
          name="adminPassword"
          placeholder="Password"
          required
        />
        <button type="button" onclick="adminLogin()">Login</button>
      </div>
    </div>

    <script>
      function adminLogin() {
        let adminEmail = document.getElementById("adminEmail").value;
        let adminPasswordInput = document.getElementById("adminPassword");
        if (
          adminEmail.toLowerCase() !== "admin@bluesense.co.id" ||
          adminPasswordInput.value !== "bluesense"
        ) {
          alert("Invalid email or password");
          return;
        }
        window.location.href = "/api/admin/register-devices";
      }
    </script>
  </body>
</html>
